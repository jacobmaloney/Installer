<Window x:Class="InstallerRuntime.UninstallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uninstall Application"
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="TxtTitle" Text="Uninstall Application" FontSize="24" FontWeight="Bold"/>
            <TextBlock x:Name="TxtDescription" Text="This will remove the application from your computer."
                       Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Options -->
        <StackPanel x:Name="OptionsPanel" Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Installation Details:" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <Grid Margin="10,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Location:" Grid.Column="0"/>
                <TextBlock x:Name="TxtInstallLocation" Grid.Column="1" TextWrapping="Wrap"/>
            </Grid>

            <Grid Margin="10,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="IIS Site:" Grid.Column="0"/>
                <TextBlock x:Name="TxtIISSite" Grid.Column="1"/>
            </Grid>

            <Separator Margin="0,15,0,15"/>

            <TextBlock Text="Uninstall Options:" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <CheckBox x:Name="ChkRemoveIIS" Content="Remove IIS site and application pool" IsChecked="True" Margin="10,5,0,0"/>
            <CheckBox x:Name="ChkRemoveFiles" Content="Remove application files" IsChecked="True" Margin="10,5,0,0"/>
            <CheckBox x:Name="ChkPreserveConfig" Content="Preserve configuration files (appsettings.json)" IsChecked="False" Margin="10,5,0,0"/>
        </StackPanel>

        <!-- Progress Log -->
        <Border x:Name="ProgressPanel" Grid.Row="2" BorderBrush="LightGray" BorderThickness="1"
                Visibility="Collapsed" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="TxtLog" IsReadOnly="True" BorderThickness="0"
                         FontFamily="Consolas" FontSize="11" TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
        </Border>

        <!-- Progress Bar -->
        <ProgressBar x:Name="ProgressBar" Grid.Row="3" Height="20" Margin="0,0,0,15"
                     Visibility="Collapsed"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnCancel" Content="Cancel" Width="100" Height="30" Margin="0,0,10,0"
                    Click="BtnCancel_Click"/>
            <Button x:Name="BtnUninstall" Content="Uninstall" Width="100" Height="30"
                    Click="BtnUninstall_Click" Background="#D9534F" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
